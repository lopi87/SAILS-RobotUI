<div class="modal fade" id="writeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-md-11">
            <img style="max-width:150px;" src="/images/logo/logotipo.png">
          </div>
          <div class="col-md-1">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <h2 class="modal-title center" id="myModalLabel"></h2>

        <div id="errors_container"></div>
        <div id="container"></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-info" data-dismiss="modal"><%= i18n('close') %></button>
          <button id="btn_action_modal" type="button" class="btn btn-success" onclick='submit_function()'> <%= i18n('new') %></button>
        </div>
      </div>
    </div>
  </div>
</div>
