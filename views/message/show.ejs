<h1>Message</h1>

<form class="form-horizontal paddingleft20 margintop20">
<div class="form-group">
    <label for="name" class="col-sm-1 control-label">Title</label>
    <div class="col-sm-10">
      <input disabled type="text" class="form-control" id="name" name="name" placeholder="First & Last Name" value="<%= message.title%>">
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-1 control-label">From</label>
    <div class="col-sm-10">
      <input disabled type="text" class="form-control disabled" id="name" name="name" placeholder="First & Last Name" value="<%= message.from_user_id%>">
    </div>
  </div>

  <div class="form-group">
    <label for="message" class="col-sm-1 control-label">Message</label>
    <div class="col-sm-10">
      <textarea disabled class="form-control disabled" rows="4" name="message"><%= message.content %></textarea>
    </div>
  </div>

</form>

<div class="col-md-6 margintop20">
    <a class="btn btn-md btn-success right marginright20" href="/message/reply/<%= message.id %>"><i class="fa fa-reply fa-lg"></i> Reply </a>
    <a class="btn btn-md btn-warning right marginright20" href="/message/index/">Back</a>
</div>


<script type="text/javascript">
  function subscribeAndListen() {
    io.socket.get('/message/message_subscribe');
  }
</script>
