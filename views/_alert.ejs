<div id="alert_placeholder"></div>
<% if( typeof flash != 'undefined'){ %>

  <% if( "error" in flash ) { %>
    <% flash['error'].forEach(function(message) { %>
      <script type="text/javascript">
        //bootstrap_alert['danger']('<%- message.err %>', 0 )
        toastr.error('<%- message.err %>', 'RobtUI')
      </script>
    <% }); %>
  <% } %>

  <% if( "warning" in flash ) { %>
    <% flash['warning'].forEach(function(message) { %>
      <script type="text/javascript">
        //bootstrap_alert['warning']('<%- message.err %>', 0 )
        toastr.warning('<%- message.err %>', 'RobotUI')
      </script>
    <% }); %>
  <% } %>

  <% if( "success" in flash ) { %>
    <% flash['success'].forEach(function(message) { %>
      <script type="text/javascript">
        //bootstrap_alert['success']('<%-  message.err %>', 0 )
        toastr.success('<%- message.err %>', 'RobotUI')
      </script>
    <% }); %>
  <% } %>

  <% if( "info" in flash ) { %>
    <% flash['info'].forEach(function(message) { %>
      <script type="text/javascript">
        //bootstrap_alert['info']('<%-  message.err %>', 0 )
        toastr.info('<%- message.err %>', 'RobotUI')
      </script>
    <% }); %>
  <% } %>

  <% if( "server_exit" in flash ) { %>
    <% flash['server_exit'].forEach(function(message) { %>
      <% Object.keys(flash['server_exit']).forEach(function(error){ %>
        <script type="text/javascript">
          //bootstrap_alert['danger']('<%- JSON.stringify(flash['server_exit'][error])%>', 0 )
          toastr.error('<%- JSON.stringify(flash['server_exit'][error])%>', 'RobotUI');
        </script>
      <% }) %>
    <% }); %>
  <% } %>

<% }%>
