<div class="table-responsive">
  <table class="table">
    <tr>
      <th><%= i18n('online') %></th>
      <th><%= i18n('status') %></th>

      <th><%= i18n('name') %></th>
      <th><%= i18n('description') %></th>
      <th><%= i18n('ip_address') %></th>
      <th colspan="3" ><%= i18n('actions') %></th>
    </tr>

    <% _.each(data.robots, function(robot){ %>
    <tr id="<%= robot.id %>" data-model="robot" >

      <% if(robot.online){ %>
      <td> <img id="img_state_<%=robot.id%>" src="/images/online.png" height="30" width="30"></td>
      <% } else { %>
      <td> <img id="img_state_<%=robot.id%>" src="/images/offline.png" height="30" width="30"></td>
      <% } %>

      <td><span id="label_state_<%=robot.id%>" class="label label-pill <%= robot.busy ? 'label-danger' : 'label-success' %>"> <%= robot.busy ? i18n('busy') : i18n('free') %> </span></td>

      <td>
        <img src="<%= sails.getBaseUrl() + robot.avatarUrl %>" alt="Avatar" title="<%= robot.name %>" class="card-left card-circle card-margin-right img-responsive" style="width:32px">
        <a href="/robot/show/<%= robot.id %>"><%= robot.name %></a>
      </td>

      <td><%= robot.description %></td>
      <td><%= robot.ipaddress + ':' + robot.port%></td>

      <% switch( type ){
      case "public_robots": %>
        <td>
          <a id="btn_tview_<%= robot.id%>" href="/interface/view/<%= robot.iface %>" class="btn btn-sm btn-primary <%= ( robot.online && robot.busy) ? '' : 'hidden' %>"><%= i18n('interface') %></a>
          <a id="btn_tcontrol_<%= robot.id%>" href="/interface/show/<%= robot.iface %>" class="btn btn-sm btn-primary <%= ( robot.online && !robot.busy ) ? '' : 'hidden' %>" ><i class="fa fa-gamepad"></i> <%= i18n('take_control') %> </a>
          <a id="btn_tconfigure_<%= robot.id%>" href="/interface/configure/<%= robot.iface %>" class="btn btn-sm btn-primary <%= robot.online ? 'hidden' : '' %> "><i class="fa fa-wrench" aria-hidden="true"></i><%= i18n('configure') %></a>
        </td>
      <% break;


      case "my_robots": %>
      <td>
        <a id="btn_tview_<%= robot.id%>" href="/interface/view/<%= robot.iface %>" class="btn btn-sm btn-primary <%= ( robot.online && robot.busy) ? '' : 'hidden' %>"><%= i18n('interface') %></a>
        <a id="btn_tcontrol_<%= robot.id%>" href="/interface/show/<%= robot.iface %>" class="btn btn-sm btn-primary <%= ( robot.online && !robot.busy ) ? '' : 'hidden' %>" ><i class="fa fa-gamepad"></i> <%= i18n('take_control') %> </a>
        <a id="btn_tconfigure_<%= robot.id%>" href="/interface/configure/<%= robot.iface %>" class="btn btn-sm btn-primary <%= robot.online ? 'hidden' : '' %> "><i class="fa fa-wrench" aria-hidden="true"></i><%= i18n('configure') %></a>
        <a href="/robot/edit/<%= robot.id %>" class="btn btn-sm btn-warning"></i><%= i18n('edit')%></a>
        <a class="btn btn-sm btn-danger" onclick=" unlink('<%= req.session.User.id %>', '<%=robot.id%>', 'driver')"><i class="fa fa-trash-o"></i><%= i18n('unlink')%></a>
        <a class="btn btn-sm btn-danger" onclick=" window.location.href='<%='/robot/destroy/' + robot.id %>'"><i class="fa fa-trash-o"></i><%= i18n('delete')%></a>
      </td>

      <% break;
      case "my_driver_robots": %>
      <td>
        <a id="btn_tview_<%= robot.id%>" href="/interface/view/<%= robot.iface %>" class="btn btn-sm btn-primary <%= ( robot.online && robot.busy) ? '' : 'hidden' %>"><%= i18n('interface') %></a>
        <a id="btn_tcontrol_<%= robot.id%>" href="/interface/show/<%= robot.iface %>" class="btn btn-sm btn-primary <%= ( robot.online && !robot.busy ) ? '' : 'hidden' %>" ><i class="fa fa-gamepad"></i> <%= i18n('take_control') %> </a>
        <a id="btn_view_<%= robot.id%>" href="/interface/view/<%= robot.iface %>" class="btn btn-sm btn-primary"><i class="fa fa-eye" aria-hidden="true"></i></i> View </a>
        <a class="btn btn-sm btn-danger" onclick=" unlink('<%= req.session.User.id %>', '<%=robot.id%>', 'driver')"><i class="fa fa-trash-o"></i> <%= i18n('unlink')%> </a>
      </td>
      <% break;
      case "my_viewer_robots": %>
      <td>
        <a id="btn_tview_<%= robot.id%>" href="/interface/view/<%= robot.iface %>" class="btn btn-sm btn-primary <%= ( robot.online && robot.busy) ? '' : 'hidden' %>"><%= i18n('interface') %></a>
        <a class="btn btn-sm btn-danger" onclick=" unlink('<%= req.session.User.id %>', '<%=robot.id%>', 'viewer')"><i class="fa fa-trash-o"></i> <%= i18n('unlink')%> </a>
      </td>
      <% break;
      } %>
    </tr>
    <% }) %>

  </table>
</div>

<script type="text/javascript">
  function unlink(user_id, robot_id, type_link) {
    $.ajax({
      url: '/robot/unlink/' + robot_id,
      type: 'GET',
      data: {robot_id: robot_id, user_id: user_id, type_link: type_link},
      done:function() {
      },

      success: function(data){
        $("#"  + robot_id).remove();
       toastr.info('Unlink!', 'Robot' );
      },

      error: function(data) {
        show_errors(data.responseText);
      }
    });
  }
</script>
