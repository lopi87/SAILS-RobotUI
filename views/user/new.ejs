
<div class="container">
  <form action="/user/create" method="POST" class="form-signin" id="sign-up-form">
    <h2 class="form-sigin-heading">Create an account</h2>

    <% if(flash && flash.err){ %>
    <ul class="alert alert-success" style="position: relative">
      <%Object.keys(flash.err).forEach(function(error){ %>
      <li><%- JSON.stringify(flash.err[error])%></li>
      <%})%>
    </ul>
    <%}%>

    <div class="control-group">
      <input type="text" class="form-control" placeholder="your name" name="name" required>
    </div>

    <div class="control-group">
      <input type="text" class="form-control" placeholder="your title" name="title">
    </div>

    <div class="control-group">
      <input type="text" class="form-control" placeholder="email address" name="email" required>
    </div>

    <div class="control-group">
      <select data-placeholder="Choose a Language..." class="chzn-select-language" style="width:150px;" tabindex="2" name="language">
        <option value=""></option>
        <option value="ES">Spanish</option>
        <option value="EN">English</option>
        <option value="PT">Portuguese</option>
      </select>
    </div>
    <script type="text/javascript">
      $('.chzn-select-language').chosen({disable_search_threshold: 10});
    </script>


    <div class="control-group">
      <input type="password" class="form-control" placeholder="password" name="password" required>
    </div>

    <div class="control-group">
      <input type="password" class="form-control" placeholder="password confirmation" name="confirmation" required>
      <br/>
    </div>

    <input type="file" name="avatar" />


    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Account"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  </form>

</div>
