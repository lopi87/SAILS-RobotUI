<div class="container">
  <h2>User information</h2>
  <h1><%= user.name %></h1>

  <% if(user.admin){ %>
  <td> <img src="/images/admin.png"></td> admin
  <% } else { %>
  <td> <img src="/images/pawn.png"  height="42" width="42"></td> pawn
  <% } %>

  <h3><%= user.title %></h3>
  <hr>
  <h3>contact: <%= user.email %></h3>


  <div class="container-fluid">
    <div class="row">
      <a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id%>">Edit</a>
      <a class="btn btn-medium btn-primary btn-success" href="/robot/index/<%= user.id%>">My robots</a>
    </div>
  </div>
</div>
