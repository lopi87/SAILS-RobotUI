<div class="row">
  <div class="col-md-7">
    <div class="panel panel-success margintop20">
      <div class="panel-heading"><%= i18n('information') %></div>
      <table class="table">
        <thead>
        <tr>
          <th></th>
          <th><small><i class="fa fa-user marginright5" aria-hidden="true"></i><%= i18n('author').toUpperCase() %></small></th>
          <th><small><i class="fa fa-info-circle marginright5" aria-hidden="true"></i><%= i18n('name').toUpperCase() %></small></th>
          <th><small><i class="fa fa-info-circle marginright5" aria-hidden="true"></i><%= i18n('description').toUpperCase() %></small></th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td></td>
          <td><img src="<%= user.avatarUrl %>" alt="Avatar" class="card-left card-circle card-margin-right" style="width:30px"><p class="margintop5"><%= user.name %></p></td>
          <td><img src="<%= robot.avatarUrl %>" alt="Avatar" class="card-left card-circle card-margin-right" style="width:45px"><p class="margintop5"><%= robot.name %></p></td>
          <td><p class="margintop5"><%= robot.description %></td>
        </tr>
        <tr>
        <tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-5">
    <div class="panel panel-info margintop20">
      <div class="panel-heading"><%= i18n('location') %></div>
      <div class="panel-body">
        <style>
          #map {
            width: 100%;
            height: 150px;
          }
        </style>
        <div id="map"></div>
        <script>
          var map;
          function initMap() {
            var mapDiv = document.getElementById('map');
            map = new google.maps.Map(mapDiv, {
              center: {lat: parseFloat('<%= robot.latitude %>'), lng:  parseFloat('<%= robot.longitude %>')},
              zoom: 8
            });

            var marker = new google.maps.Marker({
              position: new google.maps.LatLng(parseFloat('<%= robot.latitude %>'), parseFloat('<%= robot.longitude %>')),
              icon: '/images/map_point.png',
              map: map
            });

          }

        </script>

        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key= AIzaSyD2UbFzpDj74PNzi0UBS6aVvcFnQ1iR-UA &callback=initMap">
        </script>

      </div>
    </div>
  </div>
</div>
